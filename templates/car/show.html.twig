{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.description }}</td>
            </tr>
            <tr>
                <th>TechnicalInfos</th>
                <td>{{ car.technicalInfos }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>FirstPhoto</th>
                <td>{{ car.firstPhoto }}</td>
            </tr>
            <tr>
                <th>CirculationYear</th>
                <td>{{ car.circulationYear ? car.circulationYear|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Equipment</th>
                <td>{{ car.equipment }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ car.options }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}">back to list</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
